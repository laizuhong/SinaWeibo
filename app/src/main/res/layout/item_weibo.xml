<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="5dp">


            <LinearLayout
                android:id="@+id/item_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/clik_selector"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/userhead"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_logo"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/userhead"
                        android:text="123"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/userhead"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/userhead"
                        android:text="123"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/frome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/userhead"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/time"
                        android:text="123"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/share_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="@drawable/timeline_icon_retweet"
                                android:text="1"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/share"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="12"
                                android:textColor="@color/black"
                                android:textSize="10sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/comment_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/timeline_icon_comment"
                                android:text="1"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="12"
                                android:textColor="@color/black"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>

                <com.example.laizuhong.sinaweibo.util.TweetTextView
                    android:id="@+id/text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/grid1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:visibility="gone" />


                <com.example.laizuhong.sinaweibo.util.MyGridView
                    android:id="@+id/mygridview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="5dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:visibility="gone">

                </com.example.laizuhong.sinaweibo.util.MyGridView>

                <com.example.laizuhong.sinaweibo.util.MyGridView
                    android:id="@+id/grid2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="5dp"
                    android:numColumns="2"
                    android:verticalSpacing="5dp"
                    android:visibility="gone">

                </com.example.laizuhong.sinaweibo.util.MyGridView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/frome_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/gray_black" />

                <com.example.laizuhong.sinaweibo.util.TweetTextView
                    android:id="@+id/frome_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp" />


                <com.example.laizuhong.sinaweibo.util.MyGridView

                    android:id="@+id/frome_grid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="5dp"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:visibility="gone">

                </com.example.laizuhong.sinaweibo.util.MyGridView>

            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>